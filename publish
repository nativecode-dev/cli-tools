#!/bin/bash

MODE=$1
LERNA=./node_modules/.bin/lerna

case $MODE in
"canary")
    ${LERNA} publish --canary
    ;;
"release")
    ${LERNA} publish from-package --create-release gitlab --dist-tag latest
    ;;
"prerelease")
    ${LERNA} version prerelease --dist-tag next --preid next --yes
    ${LERNA} publish from-package
    ;;
esac
