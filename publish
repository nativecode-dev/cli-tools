#!/bin/bash

MODE=$1
LERNA=./node_modules/.bin/lerna

git add -A .
git commit -m "chore: version package"

case $MODE in
"canary")
    ${LERNA} version --canary
    ;;
"release")
    ${LERNA} version --dist-tag latest --create-release gitlab
    ;;
"prerelease")
    ${LERNA} version --dist-tag next --preid next
    ;;
esac

${LERNA} publish from-git
