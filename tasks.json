{
  "tasks": {
    "bootstrap": [
      "lerna bootstrap"
    ],
    "build": [
      "[format]",
      "[lint]",
      "[build:compile]"
    ],
    "build:ci": [
      "[build:compile]"
    ],
    "build:compile": [
      "lerna run build"
    ],
    "clean": [
      "[clean:cache]",
      "[clean:output]"
    ],
    "clean:cache": [
      "rimraf .cache",
      "rimraf **/*.tsbuildinfo"
    ],
    "clean:output": [
      "rimraf binaries/*/bin",
      "rimraf binaries/*/dist",
      "rimraf binaries/*/lib"
    ],
    "configure:git": [
      ".citools/setup-git ${CI_COMMIT_REF_NAME} git@git.nativecode.net:nativecode/cli-tools.git automaton@nativecode.com"
    ],
    "configure:ssh": [
      ".citools/setup-ssh git.nativecode.net ${SSH_PRIVATE_KEY} gitssh.nativecode.net"
    ],
    "commit": [
      "git add -A .",
      "npx git-cz"
    ],
    "format": [
      "prettier --loglevel silent --write \"binaries/*/specs/**/*.ts\"",
      "prettier --write \"binaries/*/src/**/*.ts\""
    ],
    "install": [
      "npm install",
      "[bootstrap"
    ],
    "lint": [
      "tslint --project tsconfig.json --config tslint.json"
    ],
    "release": [
      ".citools/lerna-publish release"
    ],
    "release:canary": [
      ".citools/lerna-publish canary"
    ],
    "release:pre": [
      ".citools/lerna-publish prerelease"
    ],
    "test": [
      "[bootstrap]",
      "[clean]",
      "[build]",
      "[test:ci]"
    ],
    "test:ci": [
      "nyc mocha --opts mocha.opts"
    ]
  }
}
