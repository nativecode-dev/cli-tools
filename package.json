{
  "author": "opensource@nativecode.com",
  "description": "Various CLI tools",
  "homepage": "https://github.com/nativecode-dev/cli-tools#readme",
  "license": "MIT",
  "main": "index.js",
  "name": "cli-tools",
  "private": true,
  "version": "0.0.0",
  "bugs": {
    "url": "https://github.com/nativecode-dev/cli-tools/issues"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "devDependencies": {
    "@types/chai": "^4.1.7",
    "@types/chai-as-promised": "^7.1.0",
    "@types/mocha": "^5.2.7",
    "@types/node": "^8.10.49",
    "@types/yargs": "^13.0.0",
    "@types/yargs-interactive": "^2.0.0",
    "chai": "^4.2.0",
    "chai-as-promised": "^7.1.1",
    "commitizen": "^3.1.1",
    "coveralls": "^3.0.4",
    "cross-env": "^5.2.0",
    "cz-conventional-changelog": "^2.1.0",
    "git-ssh-key": "^1.1.0",
    "lerna": "^3.15.0",
    "lerna-update-wizard": "^0.14.0",
    "mocha": "^6.1.4",
    "npm-check": "^5.9.0",
    "nyc": "^14.1.1",
    "prettier": "^1.18.2",
    "rimraf": "^2.6.3",
    "source-map-support": "^0.5.12",
    "ts-node": "^8.2.0",
    "tslint": "^5.18.0",
    "tslint-config-standard": "^8.0.1",
    "tslint-no-unused-expression-chai": "^0.1.4",
    "typescript": "^3.5.2"
  },
  "keywords": [],
  "nyc": {
    "all": true,
    "exclude": [
      "node_modules",
      "**/specs/**/*.spec.ts",
      "**/index.ts"
    ],
    "extension": [
      ".ts"
    ],
    "include": [
      "**/src/**/*.ts"
    ],
    "instrument": true,
    "report-dir": ".cache/coverage",
    "reporter": "text",
    "skip-full": true,
    "sourceMap": true,
    "temp-dir": ".cache/nyc"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nativecode-dev/cli-tools.git"
  },
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "build": "lerna run build",
    "prebuild": "npm run bootstrap",
    "build:ci": "lerna run build",
    "commit": "git add -A . && npx git cz",
    "task": "bash cli-tasks",
    "test": "nyc mocha --opts mocha.opts",
    "pretest": "lerna run build",
    "test:ci": "nyc mocha --opts .citools/mocha.opts",
    "configure:git": ".citools/setup-git ${BUILD_REPO_BRANCH} ${BUILD_REPO_GIT} ${BUILD_REPO_EMAIL}",
    "configure:ssh": ".citools/setup-ssh ${BUILD_REPO_DOMAIN} ${BUILD_REPO_SSHKEY_PATH} ${BUILD_REPO_DOMAIN_SSH}",
    "release": ".citools/lerna-publish release",
    "release:canary": ".citools/lerna-publish canary",
    "release:pre": ".citools/lerna-publish prerelease",
    "upgrade": "npm-check -y",
    "postupgrade": "lerna run upgrade"
  }
}
